{
  "version": 2,
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/**/*",
          ".env",
          "config/**/*"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "dist/index.js"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "dist/index.js"
    }
  ]
}